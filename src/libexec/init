#!/bin/sh -eu

[ ! -e "$PWD/var/etc" ] && mkdir -p "$PWD/var/etc"

echo "$(cat <<EOF
#
# Auto generated file
#

export DOTFILES_CLI__FILE='$PWD/opt/dotfiles.christiangrete.com/cli/bin/dotfiles'
export DOTFILES_DIR='$PWD'
export DOTFILES_REPO__DIR='$(dirname "$PWD")'
EOF
)" > "$PWD/var/etc/environment.sh"
